<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>


    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/text_gray_color</item>
        <item name="colorControlActivated">@color/text_gray_color</item>
        <item name="colorControlHighlight">@color/text_gray_color</item>
        <item name="colorAccent">@color/text_gray_color</item>
        <item name="android:textColorHint">@color/text_gray_color</item>
    </style>


    <style name="StyleEditTextThemeColorBlack">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/text_gray_color</item>
        <item name="colorControlActivated">@color/text_gray_color</item>
        <item name="android:textColorPrimary">@color/text_gray_color</item>
        <item name="android:textColorHint">@color/text_gray_color</item>
    </style>


    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#f7f7f7</item>
        <item name="colorControlActivated">@color/colorDarkSkyBlue</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>


    <style name="StyledTilEditTextTheme">
        <!--<item name="android:imeOptions">actionNext</item>-->
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#f7f7f7</item>
        <item name="colorControlActivated">@color/colorDarkSkyBlue</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>


    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorDarkSkyBlue</item>
    </style>

    <style name="charan" parent="android:Widget">
        <item name="tabIndicatorColor">@color/colorDarkSkyBlue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabTextAppearance">@color/colorBlack</item>
        <item name="tabSelectedTextColor">@color/colorDarkSkyBlue</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorDarkSkyBlue</item>
    </style>

    <style name="progressDialogStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ScaleFromCenter">
        <item name="android:windowEnterAnimation">@anim/scale_from_center</item>
        <item name="android:windowExitAnimation">@anim/collapse_to_center</item>
    </style>

    <style name="PermissionDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="PlayerTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="PlayerTheme.Spherical">
        <item name="surface_type">spherical_view</item>
    </style>

    <style name="WeekCalcTheme">
        <item name="surface_type">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
